<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.MainActivity">

    <!-- Glass Top Bar -->
    <LinearLayout
        android:id="@+id/topBarContainer"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/glass_toolbar"
        android:paddingStart="4dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/home_24"
            app:tint="@color/white" />

        <!-- Bookmark Button -->
        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/btn_bookmark_page"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_bookmark_outline"
            app:tint="@color/white" />

        <!-- Refresh Button -->
        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Refresh"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/refresh_24"
            app:tint="@color/white" />

        <!-- Dark Mode Toggle -->
        <ImageButton
            android:id="@+id/btnDarkModeToggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/moon_stars_24"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

        <!-- Glass Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:boxStrokeColor="@color/glass_stroke"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="none"
            app:boxBackgroundColor="@color/glass_fill_medium">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_hint"
                android:imeOptions="actionGo"
                android:inputType="textUri"
                android:maxLines="1"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Go / Search Button -->
        <ImageButton
            android:id="@+id/btnGo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/btn_go"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/search_icon"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Collapse/hide top menu button -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/topmenuhide"
        app:layout_constraintEnd_toEndOf="@+id/topBarContainer"
        app:layout_constraintTop_toBottomOf="@id/topBarContainer"
        android:backgroundTint="#30FFFFFF"
        android:drawableTint="@color/white" />

    <!-- Glass Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:progressTint="#FF8AB4FF"
        android:progressBackgroundTint="#30FFFFFF"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarContainer"
        tools:visibility="visible" />

    <!-- WebView -->
    <FrameLayout
        android:id="@+id/webViewContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Glass FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSummarize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="66dp"
        android:contentDescription="@string/btn_summarize"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:backgroundTint="@color/glass_fill_strong"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <!-- Glass Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/text_secondary"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>